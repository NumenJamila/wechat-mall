@import "../common/common.wxss";
/* @import "/css/DuoguanShop/DuoguanShop-template-default.wxss"; */


.topStateBox{background: #fff;}
/* 支付状态 */
.payStateBox{justify-content: center;padding: 80rpx 40rpx 60rpx;align-items: center;}
.payStateIco{width: 160rpx;height: 180rpx;margin-right: 30rpx;}
.payStateTit{font-weight: bold;font-size: 32rpx;}
.payStateInfo{font-size: 24rpx;color: #999;}
.payStateMsg{line-height: 1.4;margin-top: 10rpx;}
.payPrice{color: #fd6d50;}
.payPriceNum{font-size: 30rpx;}
.payStyle{color: #333;}
/* 优惠券和积分 */
.couponSendBox{padding: 30rpx;}
.couponSend{width: 640rpx;margin: auto;border-radius: 10rpx;padding: 20rpx;align-items: center;text-align: left;font-size: 28rpx;background: #f8f9fa;margin-right: 20rpx;line-height: 1.4;}
.couponSend:last-child{margin-right: 0;}
.couponSend:only-child{padding: 20rpx 30rpx;}
.couponSendBtn{font-size: 20rpx;background: #09bb07;background: var(--DShop-mcolor);color: #fff;line-height: 44rpx;border-radius: 44rpx;margin-left: 10rpx;padding: 0;width: 90rpx;text-align: center;}
.couponSendBtn::after{display: none}
.couponSendTips{font-size: 24rpx;color: #999;margin-top: 10rpx;}
.couponSendBtn.disabled{pointer-events: none;background: #dcdada;}
.couponJifenIco{color: #fbcd2b;font-size: 40rpx;margin-left: 20rpx;}

/* 其他信息 */
.otherList{background: #fff;margin-top: 20rpx;padding: 20rpx 30rpx;font-size: 28rpx;line-height: 1.5;}
.otherListCont{align-items: center;}
.otherListIco{width: 80rpx;height: 80rpx;margin-right: 20rpx;}
.otherLightText{color: #fd6d50;}
.otherListTips{font-size: 24rpx;color: #999;margin-top: 20rpx;padding-left: 100rpx;}
.openMemberBtn{font-size: inherit;display: inline-block;line-height: inherit;color: #09bb07;color: var(--DShop-mcolor);padding: 0;vertical-align: middle;background: transparent;}
.openMemberBtn .iconfont{font-size: .8em;display: inline-block;vertical-align: .2em;}
/* 立即分享 */
.otherListTipBtn{font-size: 22rpx;background: #09bb07;background: var(--DShop-mcolor);color: #fff;line-height: 44rpx;border-radius: 44rpx;margin-left: 20rpx;padding: 0 26rpx;align-self: center;}
/* 按钮 */
.orderBtnBox{margin: 40rpx 0 80rpx;padding: 0 30rpx;}
.orderBtnItem{background: #fff;font-size: 28rpx;line-height: 80rpx;border-radius: 0;}
.orderBtnItem:nth-child(n+2){margin-left: 30rpx;}
/* 返回首页 */
.returnHomeBtn{width: 100%;line-height: 92rpx;background: #fff;border-radius: 0;font-size: 30rpx;}


