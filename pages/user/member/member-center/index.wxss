/* pages/user/member/member-center/index.wxss */
@import "../font.wxss";
@import "/wxParse/wxParse.wxss";
.iconfont{font-size: inherit;display: inline-block;vertical-align: bottom;}
page{font-size: 32rpx;background: #fff;}
.fb{font-weight: bold;}
.member-card-box{padding:30rpx 30rpx 0;background: #3c3e43;}
.member-card{padding: 30rpx;background-image: -webkit-linear-gradient( -4deg, rgb(201,176,132) 0%, rgb(212,188,145) 100%);color: #fff;border-radius: 16rpx 16rpx 0 0;}
.user-info{align-items: center;line-height: 100%;}
.user-img{width: 80rpx;height: 80rpx;border-radius: 50%;box-shadow: 0 0 0 2px rgba(255,255,255,0.4);}
.member-grade{font-size: 28rpx;margin-top: 16rpx;}
.user-edit{font-size: 32rpx;padding: 0 10rpx;align-self: center;}
.user-name{max-width: 300rpx;}
.write-code{font-size: 50rpx;}
.card-money{margin-top: 40rpx;align-items: center;}
.balance-tit{ opacity: .6;}
.card-recharge{background: transparent;border: 1px solid;color: #fff;border-radius: 60rpx;line-height: 50rpx;font-size: 28rpx;}
.card-recharge::after{border:none;}
.card-recharge.button-hover{background: rgba(255,255,255,0.2);}
.card-balance{font-size: 36rpx;line-height: 1.3;}
.card-balance-money{font-size: 50rpx;}
.vip-number{ position: relative; margin:0 -30rpx -30rpx -30rpx; padding: 20rpx 30rpx 10rpx; background:linear-gradient(rgba(255, 255, 255, 0),rgba(0, 0, 0, 0.2)); color:rgba(255,255,255,0.8); letter-spacing: 1px; text-shadow: 1px 1px 2px rgba(0,0,0,0.4);}

/* 编辑会员卡用户名 弹窗 */
.popupBg{width: 100%;height: 100%;position: absolute;top: 0;left: 0;background: rgba(0, 0, 0, 0.5);}
.editPopBox{position: absolute;top: 50%;left: 50%;-webkit-transform: translate(-50%,-50%);transform: translate(-50%,-50%);width: 600rpx;background: #fff;border-radius: 12rpx;z-index: 1;overflow: hidden;}
.editPopTit{line-height: 80rpx;font-size: 32rpx;font-weight: bold;text-align: center;}
.editPopInpBox{width: 500rpx;margin: 30rpx auto;line-height: 68rpx;font-size: 28rpx;}
.editPopInpBox input{width: 100%;height: 68rpx;position: relative;}
.editPopInpBox input::before{content: '';display: block;position: absolute;bottom: 0;left: 0;right: 0;height: 1px;background: #c9b084;-webkit-transform: scaleY(.5);transform: scaleY(.5);-webkit-transform-origin: bottom;transform-origin: bottom;}
.editPopBtnBox{margin-top: 50rpx;}
.editPopBtn{border: none;border-radius: 0;line-height: 90rpx;text-align: center;padding: 0;color: #666;background: #f8f8f8;font-size: 28rpx;}
.editPopBtn::after{display: none;}
.editPopBtn:last-child{color: #c9b084;background: #fafafa;}


/* 充值弹框 */
.recharge-pop{position: fixed;top: 0;left: 0;right: 0;bottom: 0;z-index: 2;display: flex;display: -webkit-flex;align-items: center;justify-content: center;}
.recharge-popbg{background: rgba(0, 0, 0, 0.5);width: 100%;height: 100%;position: absolute;top: 0;left: 0;}
.recharge-cont{width: 650rpx;border-radius: 12rpx;background: #fff;padding: 60rpx 70rpx;z-index: 1;text-align: center;overflow: hidden;box-sizing: border-box;position: relative;}
.recharge-colse{position: absolute;right: 0;top: 0;background: #c9b084;width: 78rpx;height: 78rpx;border-bottom-left-radius: 80%;}
.recharge-colse::before,.recharge-colse::after{content:'';display: block;width: 50%;height: 1px;background: #fff;position: absolute;right: 20%;top: 45%;transform: rotate(45deg);}
.recharge-colse::after{transform: rotate(-45deg);}
.recharge-colse:activeP{opacity: 0.8;}
.rechargeChooseBox{max-height: 640rpx;overflow-y: auto;-webkit-overflow-scrolling: touch;margin-top: 30rpx;}
.recharge-btn{background: transparent;color: #c9b084;border: 1px solid;font-size: 30rpx;border-radius: 6rpx;padding: 20rpx 30rpx;text-align: left;line-height: normal;}
.recharge-btn:nth-child(n+2){margin-top: 30rpx;}
.rechargeNum{font-size: 48rpx;}
.rechargeTips{margin-top: 10rpx;font-size: 24rpx;}
.recharge-btn.active,.recharge-inp.active{background: rgba(201, 176, 132, 0.2);}
.recharge-btn::after{border: none;}
/* 自定义充值 */
.rechargeInp{display: flex;display: -webkit-flex;padding: 0 50rpx;margin-top: 100rpx;align-items: center;justify-content: center;position: relative;font-size: 60rpx;}
.rechargeInp::before{content: '';display: block;height: 1px;background: #c9b084;position: absolute;bottom: 0;left: 80rpx;right: 80rpx;}
.recharge-inp-txt{width: 240rpx;height: 100rpx;}
.rechargeTextBtn{padding: 20rpx 30rpx;display: block;width: 200rpx;margin: 30rpx auto;font-size: 24rpx;color: #009aff;}
.rechargeTextBtn.hover{opacity: .6;}
.recharge-sure{margin-top: 50rpx;background: #c9b084;color: #fff;border-radius: 6rpx;font-size: 32rpx;line-height: 86rpx;}
/* .recharge-item{ max-height: 400rpx; overflow: hidden; overflow-y: auto; -webkit-overflow-scrolling: touch;} */

.card-integral{display: flex;display: -webkit-flex;align-items: center;justify-content: space-between;background: #4d5057;padding:30rpx;color: #fff;}
.card-integral .iconfont{font-size: 1.2em;}
.card-desc-tit{padding: 30rpx;background: #fff;}
.card-desc{background: #fff;}
.card-desc-item{padding: 20rpx 30rpx;display: flex;display: -webkit-flex;}
.card-desc-item .iconfont{font-size: 40rpx;}
.card-desc-cont{flex: 1;margin-left: 30rpx;}
.desc-item-tit{font-weight: bold;}


.popupBox {
    position: fixed;
    z-index: 10;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
}

.shade_bg {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
}

.modal {
    position: absolute;
    z-index: 1005;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    border-radius: 10rpx;
    width: 70%;
}

.modTit {
    text-align: center;
    color: #f66;
    font-weight: 700;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.inpBox {
    padding: 0 40rpx;
    margin-bottom: 50rpx;
}

.inp {
    height: 80rpx;
    line-height: 70rpx;
    border-bottom: 1px solid #ccc;
}

.input-placeholder {
    font-size: 28rpx;
}

.ktBtn {
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 0;
    font-size: 30rpx;
    color: #fff;
    background-color: #09bb07;
}

.ktBtn::after {display: none;}

/* 富文本信息 */
.memberContBox{padding: 30rpx;line-height: 1.5;}

/* 底部按钮 */
.bottomBtnBox{height: 88rpx;margin-top: 20rpx;}
.bottomBtn{position: fixed;bottom: 0;left: 0;right: 0;background: #f66;color: #fff;font-size: 32rpx;line-height: 88rpx;border-radius: 0;}
.bottomBtn.button-hover{background: #f77;}
.bottomBtn::after{display: none;}