/* pages/user/share/index.wxss */
page{background: white;}
/* canvas */
.canvas{border-radius: 10rpx;position: relative;z-index: 0}
.imageCanvas{position: absolute;left: 0;top: 0;width: 100%;}
#my-canvas{ width:100%;max-width: 420px;border-radius: 8rpx;margin: 0 auto;}
.canvasBtn{padding: 60rpx 0 40rpx 0}
.canvasBtn button{width: 332rpx;height: 74rpx;line-height: 74rpx;color: white;font-size: 32rpx;font-weight: bold;border-radius: 37rpx;border: none;}
.canvasBtn .share{background: #FFAF15}
.canvasBtn .save{background: #FE3043}
.hoverBtn{opacity: 0.8}

.canvasShare{text-align: center;font-size: 36rpx;font-weight: bold;line-height: 1.4;padding: 30rpx 0 0 0;}
.canvasShare text{color: #FE3444;}



/* 签到 */
.signRules{position: absolute;width: 32rpx;height: 32rpx;line-height: 32rpx;text-align: center;font-size: 24rpx;color: white;border: 1px solid white;top: 30rpx;right: 30rpx;z-index: 2;border-radius: 50%;}
.signBox{padding-bottom: 30rpx;position: relative;}
.signBg{width: 100%;height: 308rpx;position: relative;z-index: 1;}
.signTop{margin: -138rpx 30rpx 0 30rpx;background: white;box-shadow:0px 6rpx 16rpx 0px rgba(215,213,213,0.28);border-radius:10rpx;position: relative;z-index: 1;}
.wx-switch-input{width:60rpx !important;height:30rpx !important;background: #FE3043 !important;border: #FFE2E5 !important;}
.wx-switch-input::before{width:60rpx !important;height: 30rpx !important;background: #FFE2E5!important;}
.wx-switch-input::after{width: 30rpx !important;height: 30rpx !important;}
.title{text-align: center;position: relative;line-height: 1.2;}
.title .cont{font-size: 32rpx;font-weight: bold;padding: 35rpx 0;}
.title .cont text{color: #FE3043;}
.title .remind{position: absolute;right: 20rpx;font-size: 24rpx;color: #666;top: 40rpx;}
.title .remind switch{margin-left: 10rpx;}
.week{padding: 10rpx 30rpx;position: relative;}
.week .flex{justify-content: space-between;line-height: 1;align-items: center;position: relative;}
.week .flex view{position: relative;z-index: 1;border-radius: 50%;width: 40rpx;height: 40rpx;font-size: 28rpx;font-weight: bold;color: #D3D3D3;background: rgb(219,219,219,0.8);text-align: center;line-height: 40rpx;}
.week .flex .have{width: 44rpx;height: 44rpx;background: #FE3043;color: white}
.week .flex .not{background: #FFE2E5;color: #FE3043;}
progress{position: absolute;height: 10rpx;left: 0;width: 100%;bottom: 26rpx;}
.continuous{text-align: center;padding: 40rpx 0}
.continuousText{font-size: 24rpx;color: #FF9B25;text-align: center;display: inline-block;border-radius: 26rpx;background: #FEF6E9;width: 508rpx;height: 52rpx;line-height: 52rpx;}
/* 红包 */
.rewardBox{padding: 50rpx 90rpx 30rpx 90rpx;display: flex;flex-wrap: wrap;justify-content: center;}
.rewardHave{width:85rpx;text-align: center;margin-right: 76rpx;margin-bottom: 20rpx;}
.rewardBox .rewardHave:nth-of-type(4),.rewardBox .rewardHave:nth-of-type(7){margin-right: 0}
.rewardBox image{width: 85rpx;height: 100rpx;}
.rewardBox .red{color: #EF4251;font-size: 24rpx;line-height: 1.2;margin-bottom: 8rpx;}
.rewardBox .NotTime{color: #999;font-size: 24rpx;line-height: 1.2;margin-bottom: 8rpx;}
.rewardBox .Have{display: inline-block;width:85rpx;height:26rpx;background:rgba(255,226,229,1);border-radius:13rpx;line-height: 26rpx;text-align: center;font-size: 20rpx;color: #EF4251;}
.rewardBox .Not{display: inline-block;width:85rpx;height:26rpx;background:rgba(245,245,245,1);border-radius:13rpx;line-height: 26rpx;text-align: center;font-size: 20rpx;color: #999;}
.signShare{text-align: center;font-size: 36rpx;font-weight: bold;}
.signShare text{color: #FE3444;}

/* 弹出框 */
.tckBox{position: relative;z-index: 5;width: 100%;}
.tckBg{position: fixed;width: 100%;height: 100%;left: 0;top: 0;background: black;opacity: 0.6;z-index: 5}
.tckCont{position: fixed;  top: 50%;left: 50%;transform: translate(-50%,-50%);background: white;width: 540rpx;z-index: 10;border-radius: 10rpx;text-align: center;}
.tckCont image{width: 140rpx;height: 116rpx;}
.tckCont .title{font-size: 36rpx;font-weight: bold;line-height: 1.2;margin: 35rpx 0;}
.signSuccess{padding-bottom: 70rpx;}
.signSuccess image{margin-top: -55rpx;}
.signSuccess .addIntegral{font-size: 32rpx;line-height: 1;}
.signSuccess .addIntegral text{font-size: 50rpx;font-weight: bold;color: #FE3043;padding-right: 6rpx;}
.tckCont .tckText{font-size: 28rpx;color: #8F8E8E;line-height: 1;margin-top: 40rpx;}
.tckCont .tckText text{color: #FFBE18}
.obtainCoupons{padding: 40rpx 0 85rpx 0;}
.obtainCoupons .title{font-size: 32rpx;margin: 0;padding-bottom: 45rpx;}
.obtainCoupons .coupons {margin: 0 auto;width: 295rpx;height: 100rpx;background:linear-gradient(270deg,rgba(255,102,77,1),rgba(254,134,115,1));border-radius:6px;color: white;}
.obtainCoupons .coupons .moneys{width: 226rpx;height: 100rpx;text-align: center;line-height: 100rpx;position: relative;font-size: 20rpx;}
.obtainCoupons .coupons .moneys text{font-size: 60rpx;font-weight: bold;margin-right: 12rpx;}
.obtainCoupons .coupons .text{width: 68rpx;height: 100rpx;text-align: center;padding: 13rpx 10rpx;line-height: 1;font-size: 26rpx;border-left: 1rpx dashed white;position: relative;}
.obtainCoupons .coupons .text::after{content: '';width: 15rpx;height: 15rpx;background: white;border-radius: 50%;left: -7rpx;top: -7rpx;position: absolute;}
.obtainCoupons .coupons .text::before{content: '';width: 15rpx;height: 15rpx;background: white;border-radius: 50%;left: -7rpx;bottom: -7rpx;position: absolute;}
.obtainCoupons .tckText{margin-top: 50rpx;}
.getPoint{padding: 65rpx 0 30rpx 0}
.getPoint .title{margin: 60rpx 0;font-size: 32rpx;}
.getPoint .title .red{font-size: 40rpx;color: #FE3043;padding: 0 10rpx;}
.getPoint .title .jf{font-size: 28rpx;}
.signContinuous .titleContinuous{padding: 40rpx;margin: 0 30rpx;}
.signContinuous .addIntegral1{margin-bottom: 40rpx;}
.tckRules {padding: 30rpx;}
.tckRules .title{margin: 0 0 30rpx 0;}
.tckRules .rulesText{font-size: 28rpx;color: #666;line-height: 1.4;text-align: left;overflow-y: auto;max-height: 600rpx;min-height: 100rpx;}
::-webkit-scrollbar {width: 0;height: 0;color: transparent;}

/* 回到首页 */
.navigatorIndex{position: fixed;right: 30rpx;bottom: 100rpx;width: 100rpx;height: 100rpx;background:linear-gradient(-75deg,rgba(254,89,62,1),rgba(254,170,115,1));border-radius:50%;display: flex;align-items: center;justify-content: center;flex-direction: column;}
.navigatorHome{font-size: 44rpx;color: white;height: 41rpx;}
.navigatorText{line-height: 1.2;font-size: 20rpx;color: white;margin-top: 10rpx;}


/* 签到按钮 */
.signBtn{padding: 0 80rpx 30rpx 80rpx;}
.signBtn button{height: 80rpx;line-height: 80rpx;font-size: 32rpx;font-weight: bold;border-radius: 40rpx;color: white;background: #FE3043}
.signBtn .signAlready{background: #FF9193;}
.signBtn .clickHb{background:#f9bf05;margin-top: 40rpx;}