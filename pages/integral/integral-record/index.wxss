/* pages/integral/integral-record/index.wxss */
page{font-size: 32rpx;}
.no-content-img{width: 50%;}

.goods-item{background: #fff;}
.goods-info{padding: 30rpx;display: flex;display: -webkit-flex;}
.goods-info:active{background: #fafafa;}
.goods-info.gridXb::before{left: 30rpx;}
.goods-img{width: 190rpx;height: 190rpx;}
.goods-img image{width: 100%;height: 100%;}
.goods-cont{flex: 1;line-height: 1.3;overflow: hidden;}
.integral-time{color: #666;}
.goods-btn-box{padding: 30rpx;}
.goods-btn{padding: 0 20rpx;background: transparent;display: inline-block;vertical-align: bottom;font-size: 28rpx;line-height: 56rpx;border-radius: 6rpx;}
.goods-btn::after{border-color: currentColor;border-radius: 6rpx;}
.goods-btn:nth-child(n+2){margin-left: 20rpx;}

.integral-pop{z-index: 10;}
.integral-pop .floatBoxBg{display: block;}
.integral-cont{background: #fff;padding: 60rpx 50rpx;width: 550rpx;border-radius: 10rpx;line-height: 1.3; z-index: 1;}
.integral-sure{width: 300rpx;line-height: 78rpx;font-size: 32rpx;background: #ebc35c;color: #fff;}
.integral-sure:active{background: #e2bb55;}

.font-tips{background: rgba(0, 0, 0, 0.5);padding: 20rpx 30rpx;color: #fff;border-radius: 8rpx;position: fixed;z-index: 10;}
/* new */
.recordBox{padding: 30rpx 30rpx 15rpx 30rpx;}
.goods_record{background: white;border-radius: 10rpx;}
.recordTime{padding: 26rpx 30rpx;line-height: 1.2;font-size: 28rpx;justify-content: flex-end;}
.used{color: #FE3446;}
.success{color: #4D9A53;}
.overdue{color: #999999}
.goodsImg{width: 120rpx;height: 120rpx;border-radius: 6rpx;margin-right: 18rpx;}
.contText{display: flex;flex-direction: column;justify-content: space-between;}
.contText .title{line-height: 1.2;font-size: 32rpx;color: #333;}
.contText .moneys {line-height: 1;align-items: center;}
.contText .moneys .left{font-size: 24rpx;color: #FE3043;margin-right: 36rpx;}
.contText .moneys .left text{font-size: 32rpx;font-weight: bold;}
.contText .moneys .number{font-size: 24rpx;color: #666;}
.contText .freight{color: #666666;font-size: 24rpx;}
.goodsCont{padding: 30rpx 30rpx;}
.addressBox{padding: 20rpx 30rpx 30rpx 30rpx;}
.namePhone{font-size: 28rpx;color: #333;line-height: 1.2}
.namePhone .name{margin-right: 60rpx;}
.addressBox .address{font-size: 24rpx;color: #666;line-height: 1.2;margin-top: 20rpx;}
.conversionBox{padding: 30rpx;font-size: 24rpx;border-top: 1px dashed rgba(229,229,229,0.5);position: relative;}
.conversionEwm{line-height: 1.1;align-items: center;justify-content: flex-end;}
.conversionBox::after{content: '';background: #f5f5f5;position: absolute;width: 22rpx;height: 22rpx;left: -11rpx;top: -11rpx;border-radius: 50%;}
.conversionBox::before{content: '';background: #f5f5f5;position: absolute;width: 22rpx;height: 22rpx;right: -11rpx;top: -11rpx;border-radius: 50%;}
.conversionEwm .numbers text{margin-left: 20rpx;display: inline-block;width: 60rpx;text-align: center;color: #304C94}
.ewm{width: 115rpx;height: 48rpx;text-align: center;line-height: 48rpx;border: 1px solid rgba(179,179,178,0.5);border-radius: 4rpx;display: inline-block;}
.conversionCourier{margin-top: 25rpx;}
.conversionBox2{padding: 24rpx 30rpx;text-align: right;}

.ImgBox{position: relative;width: 120rpx;height: 120rpx;border-radius: 6rpx;margin-right: 18rpx;color: white;}
.ImgBox image{position: absolute;width: 100%;height: 100%;left: 0;top: 0;z-index: 1;}
.ImgBox .coupons{position: relative;z-index: 2;display: flex;flex-direction: column;justify-content: flex-end;height: 100%;}
.ImgBox .conditions{font-size: 20rpx;line-height: 1;padding: 15rpx 0 10rpx 0;text-align: center;}
.ImgBox .cost{line-height: 1;text-align: center;padding-bottom: 10rpx;margin: 0 10rpx;position: relative;padding-left: 4rpx;font-size: 28rpx;}
.ImgBox .cost::after{content: '￥';position: absolute;font-size: 18rpx;left: 0rpx;bottom: 10rpx;}
.angle{position: absolute;width: 78rpx;height: 32rpx;background: #FE3043;border-radius: 6rpx 0px 20rpx 0px;top: 0;left: 0;z-index: 3;font-size: 20rpx;line-height: 32rpx;text-align: center;}

/* tck */
.ewmTck{position: relative;z-index: 3;width: 100%;}
.tckBg{position: fixed;width: 100%;height: 100%;left: 0;top: 0;background: black;opacity: 0.6;z-index: 5}
.ewmBox{position: fixed;  top: 50%;left: 50%;transform: translate(-50%,-50%);background: white;width: 555rpx;z-index: 10;padding: 40rpx 38rpx 40rpx 38rpx;border-radius: 20rpx;}
.ewmBox canvas{width: 300rpx;height: 300rpx;margin: 0 auto;}
.ewmText{text-align: center;line-height: 1.2;padding: 20rpx 0;font-size: 28rpx;}
.ewmBoxNot image{width: 250rpx;height: 128rpx;}
.ewmBoxNot{position: fixed;width: 100%;z-index: 10;height: 689rpx;background: white;left: 0;bottom: 0;display: flex;flex-direction: column;justify-content: center;align-items: center;}
.ewmBoxNot .ewmText{font-size: 30rpx;color: #999;}

/* 使用限制 */
.restrictionsBox{line-height: 1;}
.useRestrictions{display: inline-block;font-size: 20rpx;color: #ebc35c;line-height: 1.6;padding: 0 10rpx;max-width: 100%;}
.useRestrictions::before{border-color: #ebc35c;border-radius: 8rpx;}