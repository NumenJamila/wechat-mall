/************ color **************/
/* blue */
page{
    --DShop-mcolor:#009aff;
    --DShop-mcolor-leight:#00aeff;
    --DShop-mcolor-dark:#0086ff;
}
.mainColor{
  color: #009aff;
}
.mainColor_bg{
  background-color: #009aff;
}
.sidebar{
    background: rgba(0, 154, 255, 0.08);
}

.backtop .icon-homefill,.aside-icon,.peisong-top,.wx-swiper-dot.wx-swiper-dot-active,button[type="primary"]{background: var(--DShop-mcolor);}
.button-hover[type="primary"]{background: var(--DShop-mcolor-dark);}
.tips-top,button[type="primary"][disabled],button[type="primary"][loading]{background: var(--DShop-mcolor-leight);}
.green,.cate-name-active,.nav-tab .sub.active,.price-rank.active,.filter-item.active,.type{ color: var(--DShop-mcolor);}
.cate-name-active::after{ border-left-color: var(--DShop-mcolor);}
.nav-tab .sub.active,.price-rank.active:before,.price-rank.active.pr-arrow:after,.filter-item.active::after{ border-bottom-color:  var(--DShop-mcolor); }
